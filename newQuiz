			public static void q8() {
				System.out.println("Qual desses personagens nasceu na Belgica?");
				System.out.println("Respostas:");
				System.out.println("1- SENS");
				System.out.println("2- AZAMI");
				System.out.println("3- ARUNI");
				Scanner sc = new Scanner(System.in);
				int resp = sc.nextInt();
				if(resp == 1) {
					certas++;
					System.out.println("Resposta Correta!");
				}else {
