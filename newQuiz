			int resp = sc.nextInt();
			if(resp == 2) {
				certas++;
				System.out.println("Resposta Correta!");
			}else {
				System.out.println("Resposta Errada!");
			
		}
		}
		
			public static void q4() {
				System.out.println("4- O R6 tem quantos operadores no total");
